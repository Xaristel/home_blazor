@page "/costsdelete"
@using home_blazor.Data.Model
@using home_blazor.Data
@using home_blazor.Data.Controllers
@inject CostsService CostsService

<h3>Delete costs by name</h3>

<table style="width: 500px;">
    <tbody>
        <tr>
            <td><h4>Enter name:</h4></td>
            <td>
                <h4><input @bind-value="@inputDeleteName" /></h4>
            </td>
        </tr>
        <tr style="text-align: center;">
            <td colspan="2">
                <h4><button @onclick="DeleteItem" style="width: 300px;">Delete</button></h4>
            </td>
        </tr>
    </tbody>
</table>

@code {
    string inputDeleteName;

    private void DeleteItem()
    {
        CostsService.DeleteItem(inputDeleteName);
    }
}
